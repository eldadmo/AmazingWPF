<mah:MetroWindow x:Class="AmazingWPF.Views.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:AmazingWPF.Views"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:properties="clr-namespace:AmazingWPF.Properties"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             Title="{x:Static properties:Resources.Title}" Height="350" Width="350">
    <Grid Margin="5">
        <ContentControl cal:View.Model="{Binding MainViewModel}"/>
    </Grid>
</mah:MetroWindow>
